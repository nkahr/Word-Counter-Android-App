<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.codeclan.com.wordcounter">
    <!--gives the app all the information it needs about resources that it has to use when it is running-->
    <!--every activity we want to include needs to be listed here-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".WordCountActivity"
            android:label="@string/main_screen_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ReturnsActivity"
            android:label="@string/returns_activity_title"
            android:parentActivityName=".WordCountActivity">

        </activity>

    </application>

</manifest>
